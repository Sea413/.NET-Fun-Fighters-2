@model TimeAdventure.Models.Player

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link href="~/css/styles.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="http://code.jquery.com/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/scripts.js" type="text/javascript"></script>
    <title>"Fun" Fighters</title>
</head>
<body>

        <span id="level">@Html.Display("LevelId")</span>
        <span id="name"> @Html.DisplayFor(x => x.Name)</span>
        <span id="health"> @Html.DisplayFor(x => x.Health)</span>
        <span id="attack"> @Html.DisplayFor(x => x.Attack)</span>

        <span id="EnemyName"> @Html.Display("EnemyName")</span>
        <span id="EnemyHealth"> @Html.Display("EnemyHealth")</span>
        <span id="EnemyAttack"> @Html.Display("EnemyAttack")</span>
        <span id="testing"></span>



        <!--Fight UI -->
        <!-- start player 1 -->
        <div id="fightUI" class="row">
            <div class="col-xs-1"></div>
            <div class="col-xs-3">
                <h1 id="player1Name" class="fighterHeader"></h1>
                <div id="fighterLeft" class="fighterHeadshot"><img src="~/images/Harold.jpg" id="player1Image"></div>
                <div class="fighterStats">
                    <div class="row">
                        <div class="col-xs-10">
                            <span>HP: </span><span id="player1HpCurrent"></span> / <span id="player1HpMax"></span>
                        </div>
                    </div>
                    <div class="lowerStats">
                        <div class="row">
                            <div class="col-xs-10">
                                <span>Attack: </span><span id="player1Attack"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="moveContainer">
                    <div id="jab" class="moveSelector" data-toggle="tooltip" title="1/2 ATTACK, 100% Base Accuracy">
                        <h2>JAB</h2>
                    </div>
                    <div id="hook" class="moveSelector" data-toggle="tooltip" title="x1 ATTACK, 50% Base Accuracy">
                        <h2>HOOK</h2>
                    </div>
                    <div id="uppercut" class="moveSelector" data-toggle="tooltip" title="x1.5 ATTACK, 20% Base Accuracy">
                        <h2>UPPERCUT</h2>
                    </div>
                    <div id="bigOBlast" class="moveSelector" data-toggle="tooltip" title="Master punch, no accuracy">
                        <h2>BIG-O-BLAST</h2>
                    </div>
                </div>
            </div>
            <div class="col-xs-4">
                <div id="gameLog"><ul id="gameLogList"></ul></div>
            </div>

            <!-- start player 2 -->
            <div class="col-xs-3">
                <h1 id="player2Name" class="fighterHeader"></h1>
                <div id="fighterRight" class="fighterHeadshot"></div>
                <div class="fighterStats">
                    <div class="row">
                        <div class="col-xs-10">
                            <span>HP: </span><span id="player2HpCurrent"></span> / <span id="player2HpMax"></span>
                        </div>
                    </div>
                    <div class="lowerStats">
                        <div class="row">
                            <div class="col-xs-10">
                                <span>Attack: </span><span id="player2Attack"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-1"></div>
        </div>

   <span id="gameOver">@Html.ActionLink("Game Over! Return to home.", "Index") </span>
   <span id="progress">@Html.ActionLink("Next Level", "LoadLevel", new { levelid = ViewData["NextLevelId"] }) </span>
</body>
</html>